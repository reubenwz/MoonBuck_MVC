@model List<Slot>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Slots</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end pb-3">
                <a asp-controller="Slot" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Slot
                </a>
            </div>

        </div>


        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Cafe Name</th>
                    <th>Job Role</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Is Filled?</th>
                    <th>View Bids</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.StartTime))
                {
                    <tr>
                        <td>@obj.CafeName</td>
                        <td>@obj.Role.Name</td>
                        <td>@obj.StartTime</td>
                        <td>@obj.EndTime</td>
                        <td>@obj.IsFilled</td>
                        <td>Bids List</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Slot" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Slot" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>