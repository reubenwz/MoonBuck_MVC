@model List<Slot>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Work Slots</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Cafe Name</th>
                    <th>Job Role</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Is Filled?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.CafeName</td>
                        <td>
                            @obj.Role.Name
                        </td>
                        <td>
                            @obj.StartTime
                        </td>
                        <td>
                            @obj.EndTime
                        </td>
                        <td>
                            @obj.IsFilled
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>